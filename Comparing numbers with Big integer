    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        number1=Double.parseDouble(jTextField1.getText());
        number2=Double.parseDouble(jTextField2.getText());
        
        BigDecimal a=new BigDecimal(number1);
        BigDecimal b=new BigDecimal(number2);
        
        double answer=(a.compareTo(b));
        
        String answer1="Both values are equal.";
        String answer2="First value is greater than second value.";
        String answer3="Second value is greater than first value.";
        
        if(answer==0){
            
            jLabel4.setText(answer1);
            
        }
        if(answer==1){
            
            jLabel4.setText(answer2);
            
        }
        if(answer==-1){
            
            jLabel4.setText(answer3);
            
        }
        
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        jTextField1.setText(null);
        jTextField2.setText(null);
        jLabel4.setText(null);
    }                                        

